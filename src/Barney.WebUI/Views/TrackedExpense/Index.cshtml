@model IndividualExpenseViewModel
@{
    ViewData["Title"] = "Expenses";
}


    <div class="card">
        <div class="card-body">Totals</div>
        <div class="form-group">
            <label asp-for="TotalExpenses"></label>
            @Html.DisplayFor(model => model.TotalExpenses)
        </div>
    </div>

<div class="card">
    <div class="card-body">
        <h3 class="card-title">Expense</h3>
        <div>
            <a asp-action="Create" asp-controller="TrackedIncome" class="btn btn-primary btn-sm">Add Income</a>
        </div>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Date</th>
                    <th>Amount</th>
                    <th>Classification</th>
                </tr>
                </thead>
                <tbody>
                    @Html.DisplayFor(model => model.IndividualExpenses)
                </tbody>
            </table>
        </div>
    </div>
</div>
