@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xl-12">
            <div class="welcome mb-4">
                <h1 class="text-primary pt-2 text-center">
                    Veritas Error
                </h1>
            </div>
            <div class="card mb-1">
                <div class="card-body">
                    <h4 class="text-center">An error occurred while processing your request. </h4>
                    <div>@Html.DisplayFor(model => model.Message)</div>
                </div>
            </div>
        </div>
    </div>
</div>